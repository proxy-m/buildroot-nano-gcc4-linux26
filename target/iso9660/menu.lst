default		0
timeout		2
color cyan/blue white/blue

title		BuildRoot ISO9660 image
kernel		/kernel ramdisk_size=300000 tsc=reliable mitigations=off random.trust_cpu=on # set 300000 KiB max, because default was 16000 max
initrd		/initrd

title		Hard Drive (first partition)
rootnoverify	(hd0)
chainloader	+1

title		BuildRoot ISO9660 and Hard ext
kernel		/kernel root=/dev/sda ro tsc=reliable mitigations=off random.trust_cpu=on

