# /etc/inittab
# Note: updated to enable autologin.
#
# Copyright (C) 2001 Erik Andersen <andersen@codepoet.org>
#
# Note: BusyBox init doesn't support runlevels.  The runlevels field is
# completely ignored by BusyBox init. If you want runlevels, use
# sysvinit.
#
# Format for each entry: <id>:<runlevels>:<action>:<process>
#
# id        == tty to run on, or empty for /dev/console
# runlevels == ignored
# action    == one of sysinit, respawn, askfirst, wait, and once
# process   == program to run

# Startup the system
::sysinit:/bin/mount -t proc proc /proc
::sysinit:/bin/mount -o remount,rw /
::sysinit:/bin/mkdir -p /tmp /var/cache
::sysinit:/bin/mkdir -p /mnt/h9p
::sysinit:/bin/mkdir -p /media /mnt/data /mnt/flash /mnt/cdrom
::sysinit:/bin/mkdir -p /dev/pts
::sysinit:/bin/mkdir -p /dev/shm
::sysinit:/bin/mount -t devpts devpts /dev/pts
::sysinit:/bin/echo /sbin/mdev > /proc/sys/kernel/hotplug
::sysinit:/sbin/mdev -s
::sysinit:/bin/mount -o remount,rw /
::sysinit:/bin/mount -a
::sysinit:/sbin/swapoff -a || true
null::sysinit:/bin/ln -sf /proc/self/fd /dev/fd
null::sysinit:/bin/ln -sf /proc/self/fd/0 /dev/stdin
null::sysinit:/bin/ln -sf /proc/self/fd/1 /dev/stdout
null::sysinit:/bin/ln -sf /proc/self/fd/2 /dev/stderr

::sysinit:/bin/hostname -F /etc/hostname

# Put a getty on the serial port
#ttyS0::respawn:/sbin/getty -L ttyS0 115200 vt100 # GENERIC_SERIAL
tty1::respawn:/sbin/getty 38400 tty1
tty2::respawn:/sbin/getty 38400 tty2
tty3::respawn:/sbin/getty 38400 tty3

# Logging junk
null::sysinit:/bin/touch /var/log/messages
null::respawn:/sbin/syslogd -n
null::respawn:/sbin/klogd -n
tty4::respawn:/usr/bin/tail -f /var/log/messages

::sysinit:/sbin/ifconfig lo 127.0.0.1 up || true
::sysinit:/sbin/route add -net 127.0.0.0 netmask 255.0.0.0 lo || true
# run rc scripts
::sysinit:/etc/init.d/rcS # you are warned about lock on dhpc

# run (u)vesafb
::sysinit:/bin/sh -c 'rmmod -f vga16fb || true'
::sysinit:/bin/sh -c 'modprobe uvesafb mode_option=1024x768-32 mtrr=3 scroll=ywrap || modprobe vga16fb' 

# Auto-login on serial console
::respawn:-/bin/sh

# Put a getty on the serial port ttyS0
###ttyS0::respawn:/sbin/getty -L ttyS0 115200 vt100
###ttyS0::respawn:/sbin/getty -a root -L ttyS0 115200 vt100
###::respawn:/sbin/getty ttyS0 38400 xterm -n -l /bin/sh
###::respawn:/bin/login -f root ttyS0 </dev/ttyS0 >/dev/ttyS0

# Stuff to do for the 3-finger salute
::ctrlaltdel:/sbin/reboot

# Stuff to do before rebooting
::shutdown:/etc/init.d/rcK
::shutdown:/bin/sync
::shutdown:/sbin/swapoff -a
::shutdown:/bin/umount -a -r
